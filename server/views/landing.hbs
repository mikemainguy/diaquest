<script>
    document.addEventListener('directoryUpdate', (evt) => {
        const htmlId = evt.detail.htmlId;
        if (htmlId) {
            const dir = document.getElementById(htmlId);
            for (const d of Object.entries(evt.detail.entries)) {
                const id = d[0];
                if (dir) {
                    const li = document.createElement('li');
                    li.setAttribute('eid', id);
                    const a = document.createElement('a');
                    a.setAttribute('href', '/worlds/' + id);
                    a.append(id);
                    li.appendChild(a);
                    if (dir.querySelector("li[eid='" + id + "'")) {

                    } else {
                        dir.appendChild(li);
                    }

                }

            }
        }

    });

</script>
