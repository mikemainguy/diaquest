<a-assets timeout="20000">
    <a-mixin id="menuPlane" material="color: #22a" width="1" height="1"
             text="align: center; wrapCount: 10"
             position="0 0 -.25" widget></a-mixin>
    <a-mixin id="widgetMaterial" material="color: #aaa; opacity: 0.5"></a-mixin>
    <a-mixin id="sizeConnectorMixin" class="sizeHandle" material="color: #ff0; opacity: 0.5"></a-mixin>
    <a-mixin id="labelMixin"
             material="color: #eee;"
             lookatme
             text-geometry="height: .05; size: .1; value: ...; font: #helvetiker"
             ></a-mixin>
    <audio id="keydown" src="/assets/sounds/KeyDown2.mp3" preload="auto"></audio>
    <audio id="keyin" src="/assets/sounds/KeyIn2.mp3" preload="auto"></audio>
    <audio id="inputclick" src="/assets/sounds/KeyDown2.mp3" preload="auto"></audio>
    <a-asset-item id="helvetiker" src="/assets/helvetiker_regular.typeface.json"></a-asset-item>
    <a-asset-item id="emoji-asset" src="/assets/emoji.glb"></a-asset-item>
    <a-asset-item id="deer-asset" src="/assets/toontown_deer.glb"></a-asset-item>
    <a-entity id="plus" type="text/x-nunjucks-template">
        <a-entity position="0 0 .1">
            <a-box width="0.05" height=".2" depth="0.05" color="#5f5"></a-box>
            <a-box width=".2" height="0.05" depth="0.05" color="#5f5"></a-box>
        </a-entity>
    </a-entity>

    <a-entity id="widgetPoint" type="text/x-nunjucks-template">
        <a-cone radius-bottom="0.03" radius-top="0" height="0.1" mixin="widgetMaterial"></a-cone>
    </a-entity>
    <a-entity id="connector-template" type="text/x-nunjucks-template">
        <a-entity class="data-connector" share-position>
            <a-cone rotation="-90 0 0" position="0 0 0" radius-top="0" radius-bottom="0.02" height=".04" class="data-packet" color="#111">
            </a-cone>
            <a-cylinder class="saveable data-direction" rotation="90 0 0" position="0 0 0"
                        material="opacity: 0.5; color: #33f" height="1" radius="0.06" visible="false">
            </a-cylinder>
            <a-entity class="label" mixin="labelMixin" position="0 0.3 0"></a-entity>
        </a-entity>
    </a-entity>

    <a-entity id="sphere-template" type="text/x-nunjucks-template">
        <a-entity share-position>
            <a-sphere class="saveable" material="color: #33f" radius="1" visible="false"></a-sphere>
            <a-entity mixin="labelMixin" position="0 0.3 0"></a-entity>
        </a-entity>
    </a-entity>
    <a-entity id="cylinder-template" type="text/x-nunjucks-template">
        <a-entity share-position>
            <a-cylinder class="saveable" material="color: #33f" radius="1" height="1" visible="false"></a-cylinder>
            <a-entity mixin="labelMixin" position="0 0.3 0"></a-entity>
        </a-entity>
    </a-entity>
    <a-entity id="box-template" type="text/x-nunjucks-template">
        <a-entity grabbable share-position>
            <a-box class="saveable" color="#00f" width="1" height="1" depth="1" visible="false"></a-box>
            <a-entity mixin="labelMixin" position="0 0.3 0"></a-entity>
        </a-entity>
    </a-entity>
    <a-entity id="user-template" type="text/x-nunjucks-template">
        <a-entity share-position>
            <a-entity scale=".2 .2 .2" position="0 0 0" rotation="0 180 0" gltf-model="#deer-asset"></a-entity>
            <a-entity mixin="labelMixin" position="0 0.3 0"></a-entity>
        </a-entity>
    </a-entity>

</a-assets>