<a-assets timeout="40000">
    <a-mixin id="menuPlane"
             material="color: #22a"
             width="1"
             height="1"
             text="align: center; wrapCount: 10"
             position="0 0 -.25" widget>
    </a-mixin>
    <a-mixin id="widgetMaterial"
             material="color: #aaa; opacity: 0.5">
    </a-mixin>
    <a-mixin id="sizeConnectorMixin"
             class="sizeHandle"
             material="color: #ff0; opacity: 0.5">
    </a-mixin>
    <a-mixin id="labelMixin"
             material="color: #eee;"
             lookatme
             text-geometry="height: .05; size: .1; value: ...; font: url(/assets/helvetiker_regular.typeface.json)"
             ></a-mixin>




    <a-entity id="plus" type="html">
        <a-entity position="0 0 .1">
            <a-box
                    width="0.05"
                    height=".2"
                    depth="0.05"
                    color="#5f5">

            </a-box>
            <a-box
                    width=".2"
                    height="0.05"
                    depth="0.05"
                    color="#5f5">

            </a-box>
        </a-entity>
    </a-entity>

    <a-entity id="widgetPoint" type="html">
        <a-cone
                radius-bottom="0.03"
                radius-top="0"
                height="0.1"
                mixin="widgetMaterial">
        </a-cone>
    </a-entity>

    <a-entity id="connector-template" type="html">
        <a-entity class="data-connector" share-position>
            <a-cone rotation="-90 0 0" position="0 0 0" radius-top="0" radius-bottom="0.02" height=".04" class="data-packet" color="#111">
            </a-cone>
            <a-cylinder class="saveable data-direction" rotation="90 0 0" position="0 0 0"
                        material="opacity: 0.5; color: #33f" height="1" radius="0.06" visible="false">
            </a-cylinder>
            <a-entity class="label" mixin="labelMixin" position="0 0.3 0"></a-entity>
        </a-entity>
    </a-entity>
    <a-entity id="light-template" type="html">
            <a-cylinder
                    share-position
                    radius=".01"
                    height=".1"
                    class="saveable">
            </a-cylinder>
            <a-entity
                    rotation="90 0 0"
                    light="type: spot; angle: 10; distance: 40">
            </a-entity>
            <a-entity
                    mixin="labelMixin"
                    position="0 0.3 0">
            </a-entity>

    </a-entity>

    <a-entity
            id="sphere-template"
            type="html">
        <a-entity share-position>
            <a-sphere
                    class="saveable"
                    material="color: #33f"
                    radius=".5"
                    visible="false">
            </a-sphere>
            <a-entity
                    mixin="labelMixin"
                    position="0 0.3 0">
            </a-entity>
        </a-entity>
    </a-entity>

    <a-entity
            id="cylinder-template"
            type="html">
        <a-entity share-position>
            <a-cylinder
                    class="saveable"
                    material="color: #33f"
                    radius=".5"
                    height="1"
                    visible="false">
            </a-cylinder>
            <a-entity mixin="labelMixin" position="0 0.3 0"></a-entity>
        </a-entity>
    </a-entity>
    <a-entity id="box-template" type="html">
        <a-entity grabbable share-position>
            <a-box
                    class="saveable"
                    color="#00f"
                    width="1"
                    height="1"
                    depth="1"
                    visible="false">

            </a-box>
            <a-entity mixin="labelMixin" position="0 0.3 0"></a-entity>
        </a-entity>
    </a-entity>
    <a-entity id="user-template" type="html">
        <a-entity share-position>
            <a-entity
                    scale=".2 .2 .2"
                    position="0 0 0"
                    rotation="0 180 0"
                    gltf-model="url(/assets/toontown_deer.glb)">
            </a-entity>
            <a-entity
                    mixin="labelMixin"
                    position="0 0.3 0">
            </a-entity>
        </a-entity>
    </a-entity>
    <img id="voiceicon" src="/assets/voice.svg">
</a-assets>